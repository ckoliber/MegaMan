{
    "name": "megaman",
    "version": "0.1.0",
    "description": "Telegram Groups manager bot",
    "keywords": [
        "loopback-application",
        "loopback"
    ],
    "main": "index.js",
    "engines": {
        "node": ">=8.9"
    },
    "scripts": {
        "build:apidocs": "lb-apidocs",
        "build": "lb-tsc es2017 --outDir dist",
        "build:watch": "lb-tsc --watch --outDir dist",
        "clean": "lb-clean dist",
        "pretest": "npm run clean && npm run build",
        "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
        "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js",
        "migrate": "node ./migrate.js",
        "prestart": "npm run build",
        "start": "node .",
        "start:watch": "nodemon .",
        "prepublishOnly": "npm run test"
    },
    "repository": {
        "type": "git"
    },
    "author": "",
    "license": "",
    "files": [
        "README.md",
        "index.js",
        "index.d.ts",
        "dist",
        "src",
        "!*/__tests__"
    ],
    "dependencies": {
        "@loopback/boot": "^1.2.3",
        "@loopback/context": "^1.12.0",
        "@loopback/core": "^1.6.0",
        "@loopback/openapi-v3": "^1.3.7",
        "@loopback/repository": "^1.5.1",
        "@loopback/rest": "^1.10.4",
        "@loopback/rest-explorer": "^1.1.18",
        "@loopback/service-proxy": "^1.1.6",
        "dotenv-safe": "^6.1.0",
        "telegraf": "^3.29.0",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@loopback/build": "^1.5.0",
        "@loopback/testlab": "^1.2.5",
        "@loopback/tslint-config": "^2.0.4",
        "@types/node": "^10.11.2",
        "@types/uuid": "^3.4.4",
        "module-alias": "^2.2.0",
        "nodemon": "^1.19.0",
        "pm2": "^3.5.0",
        "tslint": "^5.15.0",
        "typescript": "^3.4.3"
    },
    "_moduleAliases": {
        "@megaman": "./dist"
    }
}
